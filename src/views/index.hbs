<h1>Agregar Tareas</h1>

<form action="/task/add" method="post">
  <div>
    <label form="title">Escribe un titulo</label>
    <input type="text" name="name" placeholder="title" id="title" />
  </div>

  <div>
    <label for="description">Descripcion</label>
    <textarea name="description" placeholder="description" id="description">
    </textarea>
  </div>

  <div>
    <label form="title">Año</label>
    <input type="number" name="year" placeholder="Año" id="año" />
  </div>

  <div>
    <label form="title">Categoria</label>
    <input type="text" name="category" placeholder="categoria" id="categoria" />
  </div>

  <div>
    <label form="title">Lenguaje</label>
    <input type="text" name="lang" placeholder="lenguaje" id="lenguaje" />
  </div>

  <div>
    <label form="title">Imagen</label>
    <input type="text" name="image" placeholder="imagen" id="imagen" />
  </div>

  <button>Save</button>
</form>